<% if admin_logged_in? %>
<h1> Edit Book</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @suggestion, :url => {:controller => "suggestions", :action => "update" }  do |f| %>
        <% if @suggestion.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@suggestion.errors.count, "error") %> prohibited
                this article from being saved:
              </h2>
              <ul>
                <% @suggestion.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <p>
          <%= f.label :isbn,"ISBN" %><br>
          <%= f.text_field :isbn, class: 'form-control' %>
        </p>

        <p>
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control' %>
        </p>

        <p>
          <%= f.label :description %><br>
          <%= f.text_area :description, class: 'form-control' %>
        </p>

        <p>
          <%= f.label :authors %><br>
          <%= f.text_field :authors, class: 'form-control' %>
        </p>
        <p><%= f.submit class: "btn btn-primary"%></p>
    <% end %>
  </div>
 </div>
<%else%>
    <div class ="alert alert-info">Sorry you must be logged in as an admin to view this page.</div>
<% end %>