<h1>Listing books</h1>

<table border="1">
  <tr>
    <th>Title</th>
    <th>Check-out History</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @books.each do |book| %>
      <tr>
        <td><%= link_to book.title, book_path(book) %></td>
        <td><%= link_to 'view history'%></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'delete', book_path(book),
                        method: :delete,
                        data: { confirm: 'Are you sure?' }%></td>
      </tr>
  <% end %>
</table>